<?xml version="1.0" encoding="utf-8"?>
<!--to see the result in landscape mode-->
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">
        <!--below are attributes for the text view of my project name-->
        <Button
            android:id="@+id/startGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textColor="@android:color/black"
            android:text="start Game"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <!--Login button attribute declaration-->

            <!--insert image from the local drive for background-->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="371dp"
                android:layout_height="702dp"
                android:src="@drawable/image" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>